<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amandaspolti.todoapp.TelaConfig"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notificações"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView6" />

    <TableLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <TableRow>
         <TextView

             android:text="Vibrar"
             android:textColor="@color/colorText"/>
         <ToggleButton android:id="@+id/vibrar"/>
     </TableRow>
     <TableRow>
         <TextView android:text="Tocar"

             android:textColor="@color/colorText"/>
         <ToggleButton android:id="@+id/tocar"/>
     </TableRow>


 </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/volta_conf"
            style="?android:textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorText"
            android:layout_weight=".50"
            android:text="Voltar"
            android:textStyle="bold" />

        <Button
            android:id="@+id/salva_conf"
            style="?android:textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight=".50"
            android:textColor="@color/colorText"
            android:text="Salvar"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
